{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Image",
      "url": "https://github.com/enablers104/chatbot/blob/master/Images/Logo.png?raw=true",
      "size": "medium"
    },
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "default",
      "weight": "bolder",
      "text": "Welcome!",
      "wrap": true,
      "maxLines": 0
    },
    {
      "type": "TextBlock",
      "size": "default",
      "isSubtle": "yes",
      "text": "Please follow the links below for some questions you might have.",
      "wrap": true,
      "maxLines": 0
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Terms and conditions",
      "url": "https://www.tfg.co.za/terms-and-conditions"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Privacy statement",
      "url": "https://www.tfg.co.za/privacy-statement"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Frequently asked questions",
      "url": "https://www.tfg.co.za/help"
    }
  ]
}